<html> 
<body> 

	<div class="container col-md-8 order-md-1">
		<div class="form-group">

<% class_name = "City" %>
<% instance = class_name.constantize.new %>
			<h3> Créé ton profil ! </h3>
 <br />
	<%= form_tag url_for(action: 'create'), method: "post" do %> 
	<%= label_tag 'Ton prénom :' %> 
	<%= text_field_tag 'first_name', @first_name, class:'form-control' %> <br />

	<%= label_tag 'Ton nom :' %> 
	<%= text_field_tag 'last_name', @last_name, class:'form-control' %> <br /> 

	<%= label_tag 'Ton age :' %> 
	<%= text_field_tag 'age', @age, class:'form-control' %> <br />

	<%= label_tag 'Ton email :' %> 
	<%= text_field_tag 'email', @email, class:'form-control' %> <br /> 

	<%= label_tag 'Ta ville :' %> 
	<%= text_field_tag 'city', @city, class:'form-control' %> <br />  

	<%= label_tag 'Ton mot de passe :' %> 
	<%= password_field_tag 'password', @password, class:'form-control' %> <br />

	<%= label_tag 'Confirme ton mot de passe :' %> 
	<%= password_field_tag 'password_confirm', @password, class:'form-control' %> <br />
</div>
<div class="form-group">
	<%= submit_tag "Créer mon profil", class:"btn btn-light" %> <% end %>
</div>
</body> 
</html>