<style>
.card{margin-left: 200px; margin-right: 200px; margin-top: 50px;}
</style>

	<div class="card">
  <div class="card-header">
    Gossip n° <%= @gossip.id %><br>
  </div>
  <div class="card-body">
    <h5 class="card-title">Title : <%= @gossip.title %></h5>
    <h5 class="card-title">Content : <%= @gossip.content %></h5>
    <h5 class="card-title"><%= link_to "Author : #{@author_gossip}", user_path(@author_gossip_id) %></h5>

        <h5 class="card-title">City: <%= @author_gossip_city %></h5>


<!-- Bouton pour editer : -->
<% if session[:user_id] == @gossip_user %>
        <button type="button" class="btn btn-light"><%= link_to "Edit", edit_gossip_path(@gossip.id) %></button>
        <% end %>

<!-- Bouton pour delete : -->

<% if session[:user_id] == @gossip_user %>
<%= form_tag gossip_path(@gossip), method: "delete", style: "display: inline" do %>
  <%= submit_tag "Delete", class:"btn btn-light" %>
<% end %>
        <% end %>
  <br />
    <br />

<!-- Création commentaire : -->

  <br />
    <%= form_tag comment_path(@gossip) do %>
      <%= label_tag 'Comment' %>
      <%= text_area_tag 'comment',@content, class:'form-control' %>
      <br /> <br />
      <%= submit_tag 'Add Comment', class:"btn btn-light"%>
    <% end %>

<!-- Affichage commentaires : -->


<div class="col-sm-5">
  <br>
  <% @comments.each do |comment| %>
<div class="panel panel-default">
<div class="panel-heading">
<strong><%= User.find(comment.user_id).first_name %></strong> <span class="text-muted"></span>
<div class="panel-body">
<%= comment.content %>
</div><!-- /panel-body -->
</div><!-- /panel panel-default -->
</div><br>
          <% end %>

</div>

</div> 